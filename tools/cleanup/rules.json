{
  "archiveTargets": [
    { "from": "apps/e2e/fixtures", "to": "archive/tests/fixtures" },
    { "from": "apps/e2e/reports",  "to": "archive/tests/reports" },
    { "from": "results/ab",        "to": "archive/tests/results/ab" },
    { "from": "results/hybrid",    "to": "archive/tests/results/hybrid" },
    { "from": "metrics",           "to": "archive/tests/metrics" },
    { "from": "artifacts",         "to": "archive/artifacts" },
    { "from": ".artifacts",        "to": "archive/artifacts/_dot" }
  ],
  "purgeDirs": ["dist","coverage","playwright","playwright-report",".cache",".tmp","tmp",".pytest_cache","test-dist"],
  "purgeDirsRoot": ["test-dist"],
  "purgeGlobs": ["**/*.log","**/*.tmp","**/*.swp","**/.DS_Store","**/*~"],
  "keepRoots": ["apps","libs","tools","tests","py","scripts","docs",".github","schemas","export","archive","sbom","datasets","config",".qoder",".vscode"],
  "keepFiles": ["README.md","CHANGELOG.md","HOWTO-RUN.md","MAINTENANCE.md","SECURITY.md","STRUCTURE.md","CODEOWNERS","pnpm-workspace.yaml","pnpm-lock.yaml","package.json",".editorconfig",".eslintrc.json",".eslintignore",".prettierrc",".gitignore",".gitattributes",".gitleaks.toml",".hintrc","tsconfig.json","tsconfig.base.json","tsconfig.test.json","knip.json","knip-ignore.json","tsprune.json","tsprune-ignore.txt",".cspell.json"]
}
