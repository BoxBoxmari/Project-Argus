{
  "root": true,
  "ignorePatterns": [
    "dist",
    "node_modules"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
          }
        ],
        "@typescript-eslint/no-floating-promises": "error"
      },
      "parserOptions": {
        "project": true
      }
    },
    {
      "files": [
        "**/*.js"
      ],
      "extends": [
        "eslint:recommended",
        "prettier"
      ]
    }
  ]
}
