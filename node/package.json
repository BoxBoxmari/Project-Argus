{
  "name": "puppeteer_engine",
  "version": "1.0.1",
  "description": "Puppeteer engine for Project Argus with queue-based job processing",
  "main": "scraper.js",
  "type": "commonjs",
  "scripts": {
    "start": "node puppeteer_engine/scraper.js",
    "start:headless": "node puppeteer_engine/scraper.js",
    "start:headful": "cross-env ARGUS_HEADLESS=0 node puppeteer_engine/scraper.js",
    "start:queue": "ts-node src/worker.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint puppeteer_engine/scraper.js src/**/*.ts",
    "lint:fix": "eslint puppeteer_engine/scraper.js src/**/*.ts --fix",
    "test": "jest",
    "dev": "ts-node-dev --respawn --transpile-only src/worker.ts"
  },
  "author": "Argus",
  "license": "MIT",
  "dependencies": {
    "bullmq": "^4.12.0",
    "ioredis": "^5.3.2",
    "puppeteer": "^22.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "puppeteer": {
    "note": "Puppeteer >= 24.9.0 recommended for best compatibility. Current version works but is deprecated."
  }
}
