{
  "workspaces": [
    {
      "name": "@argus/scraper-playwright",
      "path": "apps/scraper-playwright",
      "type": "node",
      "scripts": {
        "start": "node dist/cli.js",
        "dev": "tsx src/cli.ts",
        "build": "tsc -b",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "test:maps": "tsx src/test-google-maps.ts"
      },
      "entrypoints": ["src/cli.ts", "src/main.ts"]
    },
    {
      "name": "@argus/userscript",
      "path": "apps/userscript",
      "type": "userscript",
      "scripts": {
        "clean": "rimraf dist || true",
        "build": "esbuild src/index.ts --bundle --minify --outfile=dist/argus.user.js --format=iife --legal-comments=none",
        "typecheck": "echo 'Typecheck skipped (GM APIs not available)'",
        "lint": "echo 'ESLint temporarily disabled - basic checks pass'",
        "test": "echo 'No tests configured'"
      },
      "entrypoints": ["src/index.ts"]
    },
    {
      "name": "@argus/js-core",
      "path": "libs/js-core",
      "type": "library",
      "scripts": {
        "build": "tsc -b",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "test": "vitest run"
      },
      "entrypoints": ["src/index.ts"]
    }
  ],
  "rootScripts": {
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "build": "pnpm -r --workspace-concurrency=1 build",
    "test": "jest --runInBand"
  },
  "ciHooks": {
    "preinstall": null,
    "postinstall": "pnpm -C apps/scraper-playwright exec playwright install chromium || true"
  },
  "tests": {
    "unit": ["tests/unit/**/*"],
    "integration": null,
    "e2e": ["tests/e2e/**/*"]
  }
}
