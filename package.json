{
  "name": "project-argus",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "postinstall": "pnpm -C apps/scraper-playwright exec playwright install chromium || true",
    "clean": "pnpm -r --workspace-concurrency=1 run clean || true",
    "typecheck": "pnpm -r --workspace-concurrency=1 run typecheck",
    "lint": "pnpm -r --workspace-concurrency=1 run lint",
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "test": "pnpm -r --workspace-concurrency=1 run test || echo \"no tests\"",
    "test:watch": "jest --watch",
    "test:workspace": "pnpm -r run test",
    "test:e2e": "node tests/e2e/run-e2e-tests.ts",
    "test:e2e:verbose": "node tests/e2e/run-e2e-tests.ts -- --verbose",
    "test:e2e:ci": "pnpm -C apps/e2e test:ci",
    "test:all": "pnpm -r run typecheck && pnpm -r run build && pnpm -r run test || true && pnpm run test:e2e",
    "lint:spelling": "cspell \"**/*\" --no-progress",
    "lint:spelling:tests": "cspell \"tests/**/*\" --no-progress",
    "ci": "pnpm run typecheck && pnpm run test && pnpm run lint:spelling",
    "argus:smoke": "pnpm -C apps/scraper-playwright build && pnpm -C apps/scraper-playwright smoke:tls",
    "start:scraper": "pnpm -C apps/scraper-playwright start",
    "dev:scraper": "pnpm -C apps/scraper-playwright dev",
    "py:test": "pwsh -NoProfile -Command \"Set-Location py; pytest -q\"",
    "py:lint": "pwsh -NoProfile -Command \"Set-Location py; ruff check .\"",
    "repo:inventory": "node tools/inventory.js",
    "repo:doctor": "node tools/doctor.mjs",
    "inventory": "node tools/inventory.js",
    "release:rc": "pnpm -r run build && node tools/release/rc.js",
    "monitor:post-release": "node tools/monitor/post_release.js",
    "gen:sim": "tsx apps/e2e/tools/gen-scenarios.ts",
    "test:sim": "pnpm -C apps/e2e test -g 'SIM#'",
    "test:real": "pnpm -C apps/e2e test -g 'REAL#'",
    "cleanup": "tsx scripts/cleanup.ts",
    "test:matrix": "pnpm run gen:sim && pnpm run test:sim && pnpm run test:real",
    "test:unit": "vitest run",
    "coverage": "c8 -r lcov -r text-summary pnpm run test:unit",
    "deadcode": "knip --strict && ts-prune",
    "deps:unused": "depcheck --ignores=playwright,@playwright/test",
    "audit": "npm audit --omit=dev --audit-level=high || true",
    "licenses": "license-checker --summary --production",
    "mutate": "stryker run",
    "tidy:plan": "knip --reporter json > .knip.json && ts-prune --json > .tsprune.json && depcheck --json > .depcheck.json && node tools/tidy/plan.mjs",
    "tidy:apply": "node tools/tidy/apply-deletions.js",
    "qa:strict": "pnpm run qa:all && pnpm run test:matrix",
    "qa:all": "pnpm -r run typecheck && pnpm -r run build && pnpm run coverage && pnpm run test:matrix && pnpm run deadcode && pnpm run deps:unused && pnpm run audit && pnpm run licenses",
    "test:e2e:stable": "cross-env E2E_GREP=\"\\\\[stable\\\\]\" pnpm -C apps/e2e test",
    "test:e2e:all": "cross-env E2E_GREP=\"\" pnpm -C apps/e2e test",
    "test:e2e:quarantine": "cross-env E2E_GREP=\"\\\\[quarantine\\\\]\" pnpm -C apps/e2e test",
    "e2e:report": "cross-env E2E_GREP='' pnpm -C apps/e2e test",
    "e2e:triage": "node tools/e2e/triage.ts"
  },
  "engines": {
    "node": ">=18.18 <23",
    "pnpm": ">=8.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@stryker-mutator/core": "^8.2.0",
    "@testing-library/dom": "^10",
    "@testing-library/jest-dom": "^6",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "c8": "^9.1.0",
    "cross-env": "^10.0.0",
    "cspell": "^8.19.4",
    "depcheck": "^1.4.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29",
    "jsdom": "^24.0.0",
    "knip": "^5.27.0",
    "license-checker": "^25.0.1",
    "stryker-cli": "^1.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "crawlee": "^3.8.0",
    "glob": "^11.0.3",
    "playwright": "^1.55.0",
    "zod": "^3.23.8"
  }
}
