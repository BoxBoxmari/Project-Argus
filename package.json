{
  "name": "argus",
  "version": "1.0.0",
  "description": "Scaffold created.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "format": "prettier -w .",
    "build:userscript": "esbuild userscripts/argus.entry.ts --bundle --format=iife --platform=browser --outfile=out/argus.user.js --banner:js=\"/* ==UserScript==\\n@name Argus Google Maps Reviews\\n@namespace https://github.com/BoxBoxmari/Project-Argus\\n@version 0.1.0\\n@match https://www.google.com/maps/*\\n@grant GM_getValue\\n@grant GM_setValue\\n@grant GM_deleteValue\\n@grant GM_listValues\\n@grant GM_download\\n@grant GM_addStyle\\n==/UserScript== */\"",
    "scrape": "node scrape.mjs",
    "process": "python python/process_ndjson.py --input out/reviews.ndjson --schema configs/schema/review.schema.json",
    "check": "npm run lint && npm run typecheck",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoxBoxmari/Project-Argus.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BoxBoxmari/Project-Argus/issues"
  },
  "homepage": "https://github.com/BoxBoxmari/Project-Argus#readme",
  "dependencies": {
    "p-limit": "^6.0.0",
    "playwright": "^1.47.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/greasemonkey": "^4.0.7",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "zx": "^8.1.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx,css,md,json,yml,yaml}": [
      "prettier -w"
    ],
    "*.{js,mjs,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
