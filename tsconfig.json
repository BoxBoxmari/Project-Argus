{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "checkJs": false,
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["greasemonkey","node"]
  },
  "include": ["apps/**/*.ts", "apps/**/*.js", "apps/**/*.mjs", "scripts/**/*"],
  "exclude": ["node_modules", "out", "data", "services"]
}
